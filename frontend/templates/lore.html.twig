            <iframe src="https://lore.katsis.net/embed.php?c=Calindra&s={% if nsfw %}0{% else %}1{% endif %}" scrolling="no"></iframe>
            <iframe src="https://lore.katsis.net/embed.php?c=Kaelith&s={% if nsfw %}0{% else %}1{% endif %}" scrolling="no"></iframe>
        </div>
    </div>
</div>