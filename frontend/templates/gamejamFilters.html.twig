<div class="jam-field select">
    <select id="filter-location">
        <option value="">-- Select location --</option>
        {% for key, value in jams.locations %}
            <option value="{{ key }}">{{ key }} ({{ value }})</option>
        {% endfor %}
    </select>
</div>
<div class="jam-field select">
    <select id="filter-engine">
        <option value="">-- Select engine --</option>
        {% for key, value in jams.engines %}
            <option value="{{ key }}">{{ key }} ({{ value }})</option>
        {% endfor %}
    </select>
</div>
<div class="jam-field select">
    <select id="filter-event">
        <option value="">-- Select event --</option>
        {% for key, value in jams.events %}
            <option value="{{ key }}">{{ key }} ({{ value }})</option>
        {% endfor %}
    </select>
</div>
<div class="jam-field select">
    <select id="filter-people">
        <option value="">-- Select participant --</option>
        {% for key, value in jams.people %}
            {% if not (key matches '/[A-F0-9]{32}/') %} {# This can probably be done better from index.php #}
                <option value="{{ key }}">{{ key }} ({{ value }})</option>
            {% endif %}
        {% endfor %}
    </select>
</div>
<div class="jam-field select is-multiple">
    <select id="filter-duration" multiple>
        <option value="0-1">≤1h</option>
        <option value="2-24">≤1 day</option>
        <option value="25-48" selected>2 days</option>
        <option value="49-72" selected>3 days</option>
        <option value="73-168" selected>1 week</option>
        <option value="169-719" selected>&gt;1 week</option>
        <option value="720-99999" selected>&gt;1 month</option>
    </select>
</div>
<div class="jam-field select is-multiple">
    <select id="filter-entries" multiple>
        <option value="-1" selected>Unknown</option>
        <option value="1-10" selected>≤10</option>
        <option value="11-100" selected>≤100</option>
        <option value="101-1000" selected>≤1000</option>
        <option value="1001-5000" selected>≤5000</option>
        <option value="5001-100000" selected>&gt;5000</option>
    </select>
</div>
<div class="jam-field select">
    <select id="filter-year">
        <option value="">-- Select year --</option>
        {% for y in "now"|date("Y").."2016-01-01"|date("Y") %}
            <option value="{{y}}">{{y}}</option>
        {% endfor %}
    </select>
</div>
<div class="jam-field select">
    <select id="filter-order">
        <option value="date">Sort by date</option>
        <option value="score">Sort by score</option>
    </select>
</div>
<br>
<input id="filter-alone" type="checkbox" class="switch is-rounded"/>
<label for="filter-alone">Done alone</label>
<input id="filter-ranked" type="checkbox" class="switch is-rounded"/>
<label for="filter-ranked">Is ranked</label>
{% if nsfw %}
<input id="filter-nsfw" type="checkbox" class="switch is-rounded"/>
<label for="filter-nsfw">Is NSFW</label>
{% endif %}