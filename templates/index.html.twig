{% extends 'base.html.twig' %}

{% block content %}
<div class="tabs is-centered is-medium is-toggle mt-5" id="main-nav">
    <ul>
        <li class="is-active"><a href="#about">About</a></li>
        <li><a href="#gamejam">Gamejams</a></li>
    </ul>
</div>
<div id="articles">
    <div id="target-about">
        <div class="container notification">
            Welcome on my website<br>
            Things are quite more empty than before, the old website was a bit of a mess on some points so I'm slowly redoing things with Bulma<br>
            And of course as a good developer I'm pushing in prod <span class="material-symbols-outlined">plumbing</span>
        </div>
        <div class="container">
            <h2 class="title">Ongoing projects</h2>
            {% for project in projects %}
            <div class="content">
                <h3 class="subtitle">{{ project.name }}</h2>
                <p>{{ project.description }}</p>
            </div>
            <div class="content">
                {% for link in project.links %}
                    {% if nsfw and link.nsfw or not img.nsfw %}
                    <a class="button{% if link.type == "primary" %} is-primary{% endif %}" href="{{ link.content }}" target="_blank"/>{{ link.name }}</a>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="fixed-grid  has-{{ project.images | length }}-cols">
                <div class="grid">
                    {% for img in project.images %}
                        {% if nsfw and img.nsfw or not img.nsfw %}
                        <div class="cell"><img src="/data/img/projects/{{ img.name }}" alt="{{ project.name }} preview: {{ img.description }}"/><legend>{{ img.description }}</legend></div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
    <div class="is-hidden container is-fluid" id="target-gamejam">
        <div class="container control">
            {% include 'gamejamFilters.html.twig' %}
        </div>
        <h3 class="subtitle has-text-centered">{{ jams.data | length }}<span id="entriesFiltered"></span> entries</h3>
        <div class="mt-5 is-flex is-justify-content-center is-flex-wrap-wrap is-gap-5">
            {% for jam in jams.data %}
                {% include 'gamejam.html.twig' %}
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}